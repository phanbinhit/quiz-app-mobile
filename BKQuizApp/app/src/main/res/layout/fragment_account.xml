<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="30dp"
    android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/frag_layout_account"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:text="Tài khoản"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MSSV:"
                            android:textSize="18dp"
                            android:textColor="@color/colorText"
                            android:layout_marginBottom="5dp">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tên:"
                            android:textSize="18dp"
                            android:textColor="@color/colorText"
                            android:layout_marginBottom="5dp">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lớp:"
                            android:textSize="18dp"
                            android:textColor="@color/colorText"
                            android:layout_marginBottom="5dp">
                        </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/frag_tv_id"
                            android:layout_gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="102170005"
                            android:textSize="18dp"
                            android:textColor="@color/colorText"
                            android:layout_marginBottom="5dp">
                        </TextView>
                        <TextView
                            android:id="@+id/frag_tv_name"
                            android:layout_gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="102170005"
                            android:textSize="18dp"
                            android:textColor="@color/colorText"
                            android:layout_marginBottom="5dp">
                        </TextView>
                        <TextView
                            android:id="@+id/frag_tv_class"
                            android:layout_gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="102170005"
                            android:textSize="18dp"
                            android:textColor="@color/colorText"
                            android:layout_marginBottom="5dp">
                        </TextView>
                </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_logout"
            android:layout_below="@+id/frag_layout_account"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ic_baseline_arrow_forward_24"
            android:text="Đăng xuất"
            android:textSize="16dp"
            android:background="#010203"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>
</RelativeLayout>