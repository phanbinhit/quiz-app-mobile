<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tv_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room: 12345"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/abeezee"
        android:textColor="#fcff4a"
        >
    </TextView>
    <TextView
        android:id="@+id/tv_user"
        android:layout_below="@+id/tv_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User: 102170005"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/abeezee"
        android:textColor="#fcff4a"
        >
    </TextView>
    <TextView
        android:id="@+id/tv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textSize="24dp"
        android:fontFamily="@font/digital"
        android:background="@drawable/bg_countdown"
        android:textColor="#fff"
        android:layout_below="@+id/tv_user"
        android:layout_marginTop="5dp"
        >
    </TextView>
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Cau 1/5:"
        android:fontFamily="@font/abeezee"
        android:textColor="#fff"
        android:layout_below="@+id/tv_countdown"
        android:layout_marginTop="5dp"
        >
    </TextView>
    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:fontFamily="@font/abeezee"
        android:textColor="#fff"
        android:text="1+1=?"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/tv_count"
        >
    </TextView>
    <RadioGroup
        android:id="@+id/rg_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_centerVertical="true">
        <RadioButton
            android:padding="12dp"
            android:textSize="20dp"
            android:id="@+id/rbtn_answer1"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/abeezee"
            android:checked="false"
            android:textColor="#263238"
            android:background="@drawable/radiobutton_bg"
            android:layout_height="wrap_content">
        </RadioButton>
        <RadioButton
            android:id="@+id/rbtn_answer2"
            android:padding="12dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:checked="false"
            android:fontFamily="@font/abeezee"
            android:background="@drawable/radiobutton_bg"
            android:textColor="#263238"
            android:layout_height="wrap_content">
        </RadioButton>
        <RadioButton
            android:id="@+id/rbtn_answer3"
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:textSize="20dp"
            android:background="@drawable/radiobutton_bg"
            android:checked="false"
            android:fontFamily="@font/abeezee"
            android:textColor="#263238"
            android:layout_height="wrap_content">
        </RadioButton>
        <RadioButton
            android:id="@+id/rbtn_answer4"
            android:layout_width="match_parent"
            android:padding="12dp"
            android:textSize="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/radiobutton_bg"
            android:checked="false"
            android:fontFamily="@font/abeezee"
            android:textColor="#263238"
            android:layout_height="wrap_content">
        </RadioButton>
    </RadioGroup>
    <RelativeLayout
        android:layout_below="@id/rg_question"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_nextQuestion"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Next Question"
            android:fontFamily="@font/abeezee"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textColor="#263238"
            android:background="@drawable/bg_edittext"
            android:textStyle="bold"
            android:textSize="16dp"
            >
        </Button>
        <Button
            android:id="@+id/btn_finish"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="finish"
            android:fontFamily="@font/abeezee"
            android:layout_below="@+id/btn_nextQuestion"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:textColor="#fff"
            android:background="@drawable/bg_button"
            android:textStyle="bold"
            android:textSize="16dp"
            >
        </Button>
    </RelativeLayout>
</RelativeLayout>